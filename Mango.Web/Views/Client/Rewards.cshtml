@model Mango.Web.Models.LoyaltyDashboardDto
@{
    ViewData["Title"] = "Loyalty & Rewards";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@Model.Client.Name - Rewards</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</div>
<div class="row g-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="h4">Points Balance</div>
                <div class="display-6">@Model.Balance</div>
                <div class="mt-3">Tier: <strong>@Model.Tier</strong></div>
                <div class="progress mt-2" style="height: 12px;">
                    <div class="progress-bar" role="progressbar" style="width:@Math.Min(100, (Model.Balance % 1000)/10)%" aria-valuenow="@Model.Balance" aria-valuemin="0" aria-valuemax="1000"></div>
                </div>
                <small class="text-muted">@Model.PointsToNextTier points to next tier</small>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5>Recent Transactions</h5>
                <table class="table table-sm">
                    <thead><tr><th>Date</th><th>Type</th><th>Points</th><th>Description</th></tr></thead>
                    <tbody>
                    @foreach (var e in Model.Recent)
                    {
                        <tr>
                            <td>@e.Date.ToLocalTime().ToString("g")</td>
                            <td>@e.Type</td>
                            <td>@e.Points</td>
                            <td>@e.Description</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

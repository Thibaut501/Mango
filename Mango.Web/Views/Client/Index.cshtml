@model IEnumerable<Mango.Web.Models.ClientDto>
@{
    ViewData["Title"] = "Clients";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Clients</h2>
    <a asp-action="Create" class="btn btn-primary">+ New Client</a>
</div>
<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text" name="q" value="@ViewBag.Query" placeholder="Search name or phone" class="form-control" />
    </div>
    <div class="col-md-3">
        <select name="tier" class="form-select">
            <option value="">All tiers</option>
            @foreach (var t in new[]{"Standard","Silver","Gold","Platinum"})
            {
                <option value="@t" selected="@(string.Equals(ViewBag.Tier as string, t, System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@t</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-secondary w-100" type="submit">Filter</button>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Tier</th>
            <th>Points</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Phone</td>
                <td>@c.Email</td>
                <td>@c.Tier</td>
                <td>@c.PointsBalance</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Rewards" asp-route-id="@c.Id" class="btn btn-sm btn-success">Rewards</a>
                    <a asp-action="Transactions" asp-route-id="@c.Id" class="btn btn-sm btn-info">Transactions</a>
                    <a asp-action="Feedback" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Feedback</a>
                </td>
            </tr>
        }
    </tbody>
</table>

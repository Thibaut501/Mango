@model Mango.Web.Models.ClientTransactionsVm
@{
    ViewData["Title"] = "Transactions";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@Model.Client.Name - Transactions</h2>
    <div>
        <a asp-action="ExportCsv" asp-route-id="@Model.Client.Id" class="btn btn-outline-primary">Export CSV</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
</div>
<div class="mb-2">
    Sort by:
    <a asp-action="Transactions" asp-route-id="@Model.Client.Id" asp-route-sortBy="date" asp-route-desc="@(Model.SortBy=="date" ? !Model.Desc : true)">Date</a> |
    <a asp-action="Transactions" asp-route-id="@Model.Client.Id" asp-route-sortBy="amount" asp-route-desc="@(Model.SortBy=="amount" ? !Model.Desc : true)">Amount</a> |
    <a asp-action="Transactions" asp-route-id="@Model.Client.Id" asp-route-sortBy="type" asp-route-desc="@(Model.SortBy=="type" ? !Model.Desc : true)">Type</a>
</div>
<table class="table table-hover">
    <thead><tr><th>Date</th><th>Type</th><th>Reference</th><th class="text-end">Amount</th></tr></thead>
    <tbody>
    @foreach (var t in Model.Items)
    {
        <tr>
            <td>@t.Date.ToLocalTime().ToString("g")</td>
            <td>@t.Type</td>
            <td>@t.Reference</td>
            <td class="text-end">@t.Amount.ToString("C")</td>
        </tr>
    }
    </tbody>
</table>

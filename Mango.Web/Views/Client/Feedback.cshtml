@model Mango.Web.Models.ClientFeedbackVm
@{
    ViewData["Title"] = "Feedback & Tickets";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@Model.Client.Name - Feedback</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</div>
<div class="row g-3">
    <div class="col-md-7">
        <div class="card">
            <div class="card-body">
                <h5>Thread</h5>
                <div class="list-group">
                    @foreach (var f in Model.Items)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <strong>@f.CreatedBy</strong>
                                <small class="text-muted">@f.CreatedAt.ToLocalTime().ToString("g")</small>
                            </div>
                            <div>@f.Message</div>
                            <span class="badge bg-secondary">@f.Status</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <h5>New Message</h5>
                <form method="post">
                    <input asp-for="NewFeedback.ClientId" type="hidden" />
                    <div class="mb-3">
                        <label asp-for="NewFeedback.Message" class="form-label"></label>
                        <textarea asp-for="NewFeedback.Message" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="NewFeedback.Message" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewFeedback.Status" class="form-label"></label>
                        <select asp-for="NewFeedback.Status" class="form-select">
                            <option>Open</option>
                            <option>InProgress</option>
                            <option>Resolved</option>
                        </select>
                    </div>
                    <button class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}
